{
  "compilerOptions": {
    "module": "ESNext", // OF: "NodeNext"
    "moduleResolution": "Node", // Zorgt voor correcte module-imports
    "target": "ES2020", // Minimaal vereist voor import.meta
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
